<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="1dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="176dp" />

    <ImageView
        android:id="@+id/hangmanView"
        android:layout_width="190dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="0.452"
        app:srcCompat="@drawable/hangman_gray" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="323dp" />

    <TextView
        android:id="@+id/word"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:text="Press restart to start new game!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="?attr/actionModeCutDrawable"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="96dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="365dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="366dp" />

    <TextView
        android:id="@+id/RestartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Restart"
        app:layout_constraintBottom_toTopOf="@+id/restartButton"
        app:layout_constraintEnd_toEndOf="@+id/restartButton"
        app:layout_constraintStart_toStartOf="@+id/restartButton" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        app:layout_constraintVertical_bias="0.663">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/a"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="A" />

            <Button
                android:id="@+id/b"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="B" />

            <Button
                android:id="@+id/c"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="C" />

            <Button
                android:id="@+id/d"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="D" />

            <Button
                android:id="@+id/e"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="E" />

            <Button
                android:id="@+id/f"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="F" />

            <Button
                android:id="@+id/g"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="G" />

            <Button
                android:id="@+id/h"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="H" />

            <Button
                android:id="@+id/i"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="I" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/j"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="J" />

            <Button
                android:id="@+id/k"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="K" />

            <Button
                android:id="@+id/l"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="L" />

            <Button
                android:id="@+id/m"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="M" />

            <Button
                android:id="@+id/n"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="N" />

            <Button
                android:id="@+id/o"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="O" />

            <Button
                android:id="@+id/p"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="P" />

            <Button
                android:id="@+id/q"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="Q" />

            <Button
                android:id="@+id/r"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="R" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/s"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="S" />

            <Button
                android:id="@+id/t"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="T" />

            <Button
                android:id="@+id/u"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="U" />

            <Button
                android:id="@+id/v"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="V" />

            <Button
                android:id="@+id/w"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="W" />

            <Button
                android:id="@+id/x"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="X" />

            <Button
                android:id="@+id/y"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="Y" />

            <Button
                android:id="@+id/z"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="2dp"
                android:text="Z" />
        </LinearLayout>

    </LinearLayout>

    <Spinner
        android:id="@+id/difficultySpinner"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:entries="@array/difficultySpinnerEntries"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="@+id/guideline10" />

    <TextView
        android:id="@+id/usedLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline10"
        app:layout_constraintTop_toBottomOf="@+id/word" />


</androidx.constraintlayout.widget.ConstraintLayout>